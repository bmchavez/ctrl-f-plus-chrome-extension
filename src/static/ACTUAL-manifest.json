{
  "name": "Ctrl-F Plus",
  "description": "Ctrl-F Plus",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Kntrl-F Extension",
    "default_icon": "icon.png"
  },
  "permissions": [
    "tabs",
    "notifications",
    "activeTab",
    "scripting",
    "storage",
    "unlimitedStorage"
  ],
  "commands": {
    "toggle_search_layover": {
      "suggested_key": {
        "default": "Ctrl+Shift+F"
      },
      "description": "Toggle the Ctrl-F search layover"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html"
}
